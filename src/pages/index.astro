---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Johndel Torrizo.">
	<main>
		<img src="https://avatars.githubusercontent.com/u/72369431?s=400&u=a827a1c3d0e903ae39f0beada429c6b27ca2c105&v=4"
		class="profile-picture" />
		<h1>Hi, I'm Jd!</h1>
		<p class="description">
			I am a Mechatronics Engineering student with a passion for technology and learning. I'm always eager to learn new technologies. 
		</p>
		<p class="subtitles"> My Projects</p>
		<ul class="link-card-grid">
			<Card
				image='https://dummyimage.com/600x400/ffffff/f2f2f2.png&text=...'
				href=""
				title="4 Dof Robotic Arm"
				description=""
			/>
			<Card
				image='https://dummyimage.com/600x400/ffffff/f2f2f2.png&text=...'
				href=""
				title="Automated Food Serving Robot"
				description=""
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: 2rem auto;
		padding: 1rem;
		width: 75%;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: min-content 1 max-content 3;
		gap: 2rem;
		padding: 0;
		align-items: center;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 2rem;
		font-weight: 600;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.subtitles {
		font-size: 1.5rem;
		font-weight: 600;
		line-height: 1;
		text-align: center;
		margin-top: 1rem;
		margin-bottom: 1rem;
	}
	.description {
		margin: 3rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: none;
		padding: 1.5rem;
		border-radius: 8px;
		margin: 0 auto;
		text-align: justify;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}

	.profile-picture {
		border-radius: 50%;
		width: 100%;
		height: auto;
		max-width: 200px;
		object-fit: cover;
		display: block;
		margin: auto;
	}
</style>
