        <li><a class="nav-link" href="/contact/">Contact</a></li>
    </ul>
</nav>

<style>
.navbar {
    display: flex;
    justify-content: flex-end;
    margin: 0;
    padding: 0;
}

.nav-links {
    list-style: none;
    display: flex;
    align-items: center;
    margin-right: 1rem;
}

.nav-link {
    color: #343a40;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    margin-left: 1rem;
    transition: color 0.3s ease;
}

.nav-link:hover,
.nav-link:focus {
    color: #495057;
}

.menu-toggle {
    display: none;
}

.menu-icon {
    display: none;
    cursor: pointer;
    font-size: 1.5rem;
    margin-right: 1rem;
}

@media (max-width: 768px) {
    .nav-links {
        display: none;
    }

    .menu-toggle:checked ~ .nav-links {
        display: flex;
    }

    .menu-toggle:checked + .menu-icon {
        display: none;
    }

    .menu-toggle:checked ~ .menu-icon::after {
        content: "\2715";
        display: inline-block;
        font-size: 1.5rem;
        margin-right: 1rem;
    }
}
